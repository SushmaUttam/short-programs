let arr = [1,3,4,4,4,5,3,7,2];
arr = arr.sort();
const dups = [];
const uniques = [];
let c = 0;
const len = arr.length;
let p1 = 0, p2 = 1;
for(let i=0; i<len; i++) {
 if(arr[p1] == arr[p2]) {
  // To show dups
 	if (dups.indexOf(arr[p1]) == -1) {
  	dups.push(arr[p1]);
  }
 	p1++;p2++;
 } else {
  // To remove dups
 	uniques.push(arr[p1]);
  p1++;p2++;
 }
}
console.log(dups)
console.log(uniques)
